generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  phone       String   @unique
  name        String
  email       String?
  photo       String?
  isAdmin     Boolean  @default(false)
  isVolunteer Boolean  @default(false)
  qrCode      String?
  events      Event[]  @relation("UserEvents")
  tasks       Task[]   @relation("VolunteerTasks")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  phone     String   @unique
  name      String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]  @relation("AdminEvents")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  createdBy   Admin    @relation("AdminEvents", fields: [adminId], references: [id])
  adminId     Int
  attendees   User[]   @relation("UserEvents")
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  eventId     Int
  event       Event    @relation(fields: [eventId], references: [id])
  volunteerId Int?
  volunteer   User?    @relation("VolunteerTasks", fields: [volunteerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}